
main
     =
    -- x + y
    let plus
             = recfun g x =
                        recfun g' y = x + y; 

    -- x + 1
    in let
        inc
            = recfun g x = x + 1;

    -- f x  = g (4 + 1) 10
    in let
        f
          = recfun f x =
              if x == 10 then 10
                         else let y = f (x+1);
                              in
                              plus (let z = 4; 
                                    in inc z) y ;
            
    in f (-1003) ; -- 10 + 5 == 15
