{
	"breadcrumbs.enabled": true,
	"breadcrumbs.icons": true,
	"C_Cpp.intelliSenseEngine": "Disabled", // Microsoft C++ extension interferes with clangd, so we need to disable it for our workspace (if the user has it installed)
	"C_Cpp.intelliSenseEngineFallback": "Disabled",
	"clangd.arguments": [
		"--compile-commands-dir=${workspaceFolder}/build",
		"--clang-tidy"
	],
	"clangd.checkUpdates": true,
	"clangd.fallbackFlags": [
		"-std=c++20",
		"-pedantic",
		"-Wall",
		"-Wextra",
		"-Werror"
	],
	"clangd.path": "/usr/bin/clangd-11",
	"clangd.semanticHighlighting": true,
	"cmake.buildBeforeRun": true,
	"cmake.configureOnOpen": true,
	"cmake.generator": "Ninja",
	"cmake.saveBeforeBuild": true,
	"editor.fontFamily": "Consolas, 'Courier New', monospace",
	"editor.fontSize": 20,
	"editor.minimap.enabled": false,
	"editor.rulers": [
		100
	],
	"files.associations": {
		"algorithm": "cpp",
		"array": "cpp",
		"atomic": "cpp",
		"*.tcc": "cpp",
		"bitset": "cpp",
		"cstddef": "cpp",
		"cstdint": "cpp",
		"cstdio": "cpp",
		"cstdlib": "cpp",
		"cstring": "cpp",
		"cwchar": "cpp",
		"deque": "cpp",
		"unordered_map": "cpp",
		"vector": "cpp",
		"exception": "cpp",
		"filesystem": "cpp",
		"functional": "cpp",
		"iterator": "cpp",
		"memory": "cpp",
		"memory_resource": "cpp",
		"random": "cpp",
		"regex": "cpp",
		"string": "cpp",
		"string_view": "cpp",
		"system_error": "cpp",
		"tuple": "cpp",
		"type_traits": "cpp",
		"utility": "cpp",
		"fstream": "cpp",
		"initializer_list": "cpp",
		"iosfwd": "cpp",
		"iostream": "cpp",
		"istream": "cpp",
		"limits": "cpp",
		"mutex": "cpp",
		"new": "cpp",
		"ostream": "cpp",
		"stdexcept": "cpp",
		"streambuf": "cpp",
		"typeinfo": "cpp",
		"bit": "cpp",
		"compare": "cpp",
		"cctype": "cpp",
		"chrono": "cpp",
		"clocale": "cpp",
		"cmath": "cpp",
		"concepts": "cpp",
		"condition_variable": "cpp",
		"csignal": "cpp",
		"ctime": "cpp",
		"cwctype": "cpp",
		"map": "cpp",
		"set": "cpp",
		"unordered_set": "cpp",
		"iomanip": "cpp",
		"numeric": "cpp",
		"optional": "cpp",
		"ranges": "cpp",
		"ratio": "cpp",
		"shared_mutex": "cpp",
		"sstream": "cpp",
		"stop_token": "cpp",
		"thread": "cpp",
		"__bit_reference": "cpp",
		"__config": "cpp",
		"__debug": "cpp",
		"__functional_base": "cpp",
		"__locale": "cpp",
		"__nullptr": "cpp",
		"__split_buffer": "cpp",
		"__string": "cpp",
		"__tuple": "cpp",
		"ios": "cpp",
		"locale": "cpp",
		"queue": "cpp",
		"span": "cpp",
		"stack": "cpp"
	},
	"files.encoding": "utf8",
	"files.eol": "\n",
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/vcpkg": true,
		"**/build*": true
	},
	"files.restoreUndoStack": true,
	"files.trimTrailingWhitespace": true,
	"files.trimFinalNewlines": true,
	"python.pythonPath": "/usr/bin/python3",
}
